@{

}

<div class="container">
    <form method="post">
        <div class="row justify-content-center form-outline">
            <div class="col-md-4 col-sm-12">
                <input name="login" id="authLogin" class="form-control" />
                <label class="form-label" for="authLogin">Login</label>
            </div>
        </div>
        <div class="row justify-content-center form-outline">
            <div class="col-md-4 col-sm-12">
                <input name="password" type="password" id="authPassword" class="form-control" />
                <label class="form-label" for="authPassword">Password</label>
            </div>
        </div>
        <div class="row justify-content-center form-outline">
            <div class="col-md-4 col-sm-12">
                <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>                
            </div>
        </div>
        <div class="row justify-content-center form-outline">
            <div class="col-md-4 col-sm-12">
                <p>@ViewBag.AuthError</p>
            </div>
        </div>
        
        <div class="text-center">
            <p>Not a member? <a class="" asp-area="" asp-controller="authorize" asp-action="register">Register</a></p>
        </div>
    </form>
</div>